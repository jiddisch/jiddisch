<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="MainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/josefin_sans_semibold</item>
        <item name="android:textColor">@color/color01</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textSize">26sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="MainButton.Home">
        <item name="android:gravity">center|bottom</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="MainMenuItem">
        <item name="android:paddingTop">@dimen/main_menu_item_padding</item>
        <item name="android:paddingStart">@dimen/main_menu_item_padding</item>
        <item name="android:paddingBottom">@dimen/main_menu_item_padding</item>
        <item name="android:fontFamily">@font/josefin_sans_semibold</item>
        <item name="android:textColor">@color/color01</item>
        <item name="android:textSize">@dimen/main_menu_item_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TitleTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
        <item name="android:letterSpacing">0.19</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">#8D6E63</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AlphabetLetterName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color01</item>
        <item name="android:fontFamily">@font/arimo</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="YiddishWord">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color01</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

    <style name="Indicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color01</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="WordContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
    </style>

    <style name="OptionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


</resources>